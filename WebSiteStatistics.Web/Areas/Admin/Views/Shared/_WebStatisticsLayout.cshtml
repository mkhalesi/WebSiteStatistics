
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Images/mkhalesiorg.png" type="image/png">
    <link href="~/WebStatistics/Site.css" rel="stylesheet" />
    <link href="~/WebStatistics/bootstrap.css" rel="stylesheet" />
    <link href="~/WebStatistics/bootstrap-theme.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/WebStatistics/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">

                <div class="box">
                    <div class="box-header">
                        <span>
                            <span class="imgleft fa fa-navicon" aria-hidden="true"></span>
                            منوی سایت
                        </span>

                    </div>
                    <div class="box-content">
                        <div class="list-group">
                            <a href="~/Admin/Dashboard/Index" class="list-group-item">صفحه اصلی<span class="pull-left fa fa-home" aria-hidden="true"></span></a>
                            <a href="~/Admin/Dashboard/CountryTable" class="list-group-item">به تفکیک کشور<span class="pull-left fa fa-flag" aria-hidden="true"></span></a>
                            <a href="~/Admin/Dashboard/CityTable" class="list-group-item">
                                به تفکیک شهر
                                <span class="pull-left">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bar-chart-line-fill" viewBox="0 0 16 16">
                                        <path d="M11 2a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3h1V7a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7h1V2z" />
                                    </svg>
                                </span>
                            </a>
                            <a href="~/Admin/Dashboard/Chart" class="list-group-item">
                                نمودار
                                <span class="pull-left">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pie-chart-fill" viewBox="0 0 16 16">
                                        <path d="M15.985 8.5H8.207l-5.5 5.5a8 8 0 0 0 13.277-5.5zM2 13.292A8 8 0 0 1 7.5.015v7.778l-5.5 5.5zM8.5.015V7.5h7.485A8.001 8.001 0 0 0 8.5.015z" />
                                    </svg>
                                </span>

                            </a>
                            <a href="~/Admin/Dashboard/BlockedIps" class="list-group-item">تنظیمات<span class="pull-left fa fa-cogs" aria-hidden="true"></span></a>
                            <a href="/" class="btn btn-success btn-sm btn-block mb-2">
                                <i class="ft-circle ml-2"></i>
                                <span>مشاهده سایت</span>
                            </a>
                            <a href="/Admin/Dashboard" class="btn btn-sm btn-warning btn-block mb-2">
                                <i class="fa-user-secret ml-2"></i>
                                <span>مشاهده پنل ادمین</span>
                            </a>
                        </div>
                    </div>
                </div>

                @await Component.InvokeAsync("CurrentVisitor")
                @await Component.InvokeAsync("SubDetails")
            </div>
            <div class="col-md-10">

                @RenderBody()

            </div>
        </div>
    </div>

    <footer class="navbar-default navbar-fixed-bottom footer">
        <div class="container-fluid">
            <div class="col-md-12 top10 text-center">
                آدرس مخزن کد در
                <a href="https://github.com/mkhalesi" target="_blank">
                    GitHub
                    <span class="fa fa-github">
                    </span>
                </a>
                |
                ارائه شده توسط
                <a href="https://mkhalesi.ir" target="_blank">
                    Mohammad khalesi
                </a>
            </div>
        </div>
    </footer>
    <script src="~/WebStatistics/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/WebStatistics/Scripts/noty/packaged/jquery.noty.packaged.min.js"></script>
    <script src="~/WebStatistics/Scripts/jquery.signalR-2.2.1.js"></script>
    @*<script type="text/javascript" src="~/signalr/hubs"></script>*@
    <script src="~/WebStatistics/Scripts/bootstrap.js"></script>
    <script src="~/WebStatistics/Scripts/canvasjs.min.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
