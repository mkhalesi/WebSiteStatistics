<div class="box">
    <div class="box-header">
        <span>
            <span class="imgleft fa fa-history" aria-hidden="true"></span>
            آمار کلی
        </span>
    </div>
    <div class="box-content">
        <ul class="list-group">
            <li class="list-group-item" style="padding: 30px 3px !important;">
                تاریخ امروز <span class="pull-left">@DateTime.Now.ToStringShamsiDate()</span>
            </li>
            <li class="list-group-item">
                بازدید امروز <span class="pull-left">@subDetails.Today</span>
            </li>
            <li class="list-group-item">
                بازدید دیروز <span class="pull-left">@subDetails.LastDay</span>
            </li>
            <li class="list-group-item">
                بازدید این ماه <span class="pull-left">@subDetails.ThisMonth</span>
            </li>
            <li class="list-group-item">
                بازدید امسال <span class="pull-left">@subDetails.ThisYear</span>
            </li>
        </ul>
        <hr />
        <ul class="list-group">
            <li class="list-group-item">
                <span>
                    <span class="imgleft fa fa-arrow-circle-up" style="color: green" aria-hidden="true"></span>
                    پر بازدید ترین روز
                </span>
                <br />
                <span class="pull-left">@subDetails.PeakDate</span>
                <br />
            </li>
            <li class="list-group-item">
                <span>
                    <span class="imgleft fa fa-arrow-circle-down" style="color: red" aria-hidden="true"></span>
                    کم بازدید ترین روز
                </span>
                <br />
                <span class="pull-left">@subDetails.LowDate</span>
                <br />
            </li>
        </ul>
    </div>
</div>